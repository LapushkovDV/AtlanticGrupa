.var
 iCommiss  : commission;
  Председатель_комиссии_Должность ,
  Председатель_комиссии_ФИО         : String

  Номер_члена_комиссии, Количество_членов_комиссии :Word
  Массив_Член_комиссии_ФИО: ARRAY [1..2] of String
  Массив_Член_комиссии_Должность: ARRAY [1..2] of String  
.endvar
.create view drogaOpr
from
  sOprOrdB
//  , synonym KatPodr Sklad
where
((
  comp(спецификацияМЦ_нрек)    == sOprOrdB.cSpSopr
//  and   sOprOrdB.cPodr == Sklad.nRec
))
;
.begin
Количество_членов_комиссии :=0;
 iCommiss.InitCommission(204);
 iCommiss.RunWindowSelection(1);

    Председатель_комиссии_ФИО        := iCommiss.GetComponentFIO (0); // Председатель_комиссии_ФИО
    Председатель_комиссии_Должность  := iCommiss.GetComponentPost(0); // Председатель_комиссии_Должность

  Количество_членов_комиссии := iCommiss.GetComponentsCount;
  For (Номер_члена_комиссии := 1; Номер_члена_комиссии <= Количество_членов_комиссии; Номер_члена_комиссии := Номер_члена_комиссии + 1)
  {
    // Входим в цикл по членам комиссии
    Массив_Член_комиссии_ФИО       [Номер_члена_комиссии] := iCommiss.GetComponentFIO (Номер_члена_комиссии); // Член_комиссии_ФИО
    Массив_Член_комиссии_Должность [Номер_члена_комиссии] := iCommiss.GetComponentPost(Номер_члена_комиссии); // Член_комиссии_Должность
  }
Номер_члена_комиссии := 0; 

end.
