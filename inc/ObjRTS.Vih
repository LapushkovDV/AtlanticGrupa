  #end
  Function MakeBaseFileName(
    _RepID    : string;
    _FileName : string
  ) : string;
  //----------------------------------------------------------------------------
  #doc
     Сформировать путь на шаблон по умолчанию
  #end
  Function MakeDefaFileName(
    _RepID    : string;
    _FileName : string
  ) : string;

  //----------------------------------------------------------------------------
  #doc
     Сформировать путь на файл надстроек из дистрибутива
  #end
  Function MakeDistribXLAFileName(
    _RepID    : string;
    _XLAFileName : string
  ) : string;
  //----------------------------------------------------------------------------
  #doc
     Сформировать путь на базовая надстройка сервера
  #end
