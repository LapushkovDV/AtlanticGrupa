    _RepID    : string;
    _XLAFileName : string
  ) : string;
  //----------------------------------------------------------------------------
  #doc
     Сформировать путь на базовая надстройка клиента
  #end
  Function MakeBaseCliXLAFileName(
    _RepID    : string;
    _XLAFileName : string
  ) : string;

  //----------------------------------------------------------------------------
  #doc
     Сформировать путь на базовую надстройку
  #end
  Function MakeBaseXLAFileName(
    _RepID    : string;
    _XLAFileName : string
