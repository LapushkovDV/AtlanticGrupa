 LogStrToFile(_LogFile,'Пересчет текущих остатков на ' +_dateSaldoCur+ ' (с использованием L_OSTATKI::TekSRas - параметр = "2") начало: ' + Cur_date  +  '  ' + Timetostr(Cur_Time ,'HH:MM:SS'));

 delete Pick where ((word( 7) == Pick.wList));
    RunInterface(L_OSTATKI::TekSRas,
                    cur_date
                    , word(1)
                    , word(0));

 LogStrToFile(_LogFile,'Пересчет текущих остатков окончание: ' + Cur_date  +  '  ' + Timetostr(Cur_Time ,'HH:MM:SS'));
 closeinterface(-1)
}
end;
