     if not _ICauntSal.CountMC(KatMc.nrec,0,1,_date)
      then LogStrToFile(_LogFile,KatMc.Barkod + ' ошибка пересчета' )
       else LogStrToFile(_LogFile,KatMc.Barkod + ' --!OK!-- ' )
    } // then if isMoveMcfromDate(KatMc.nrec, 0 , _date)
    else
     {
      // LogStrToFile(_LogFile,KatMc.Barkod + ' --пропущена' )
     } // else if isMoveMcfromDate(KatMc.nrec, 0 , _date)
 } //  _loop KatMc
  StopVisual('', 0);
 StopVisual('', 0);
 LogStrToFile(_LogFile,'окончание пересчета: ' + Cur_date  +  '  ' + Timetostr(Cur_Time ,'HH:MM:SS'));
  LogStrToFile(_LogFile,'МЦ пересчитано: ' +_kolMC);

// ProcessText(_LogFile,vfEscable or vfNewTitle or vfMacroSize,'Протокол пересчета')
 LogStrToFile(_LogFile,'*****') ;
var _dateSaldoCur : date  ;
